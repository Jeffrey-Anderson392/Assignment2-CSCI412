<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_fullname_studentid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jeffrey Anderson\nStudent ID: 1420817"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:paddingBottom="20dp"/>

    <Button
        android:id="@+id/explicit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Activity Explicitly"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/implicit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Activity Implicitly"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <!-- add Camera Button to open the Camera -->
    <Button
        android:id="@+id/camera_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:text="Camera" />

    <!-- add ImageView to display the captured image -->
    <ImageView
        android:id="@+id/click_image"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp" />
</LinearLayout>
